{
  "name": "gulp-remark",
  "version": "9.0.0",
  "description": "Gulp plugin for remark",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "mdast",
    "markdown",
    "md",
    "gulp",
    "gulpplugin"
  ],
  "repository": "remarkjs/gulp-remark",
  "bugs": "https://github.com/remarkjs/gulp-remark/issues",
  "author": "Denys Dovhan <email@denysdovhan.com> (https://denysdovhan.com)",
  "contributors": [
    "Denys Dovhan <email@denysdovhan.com> (https://denysdovhan.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Margatroid <lwzbill@foxmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "remark": "^14.0.0",
    "unified-engine-gulp": "^9.0.0"
  },
  "devDependencies": {
    "c8": "^7.0.0",
    "plugin-error": "^1.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^10.0.0",
    "remark-html": "^13.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "vinyl": "^2.0.0",
    "xo": "^0.39.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov npm run test-api",
    "test": "npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
